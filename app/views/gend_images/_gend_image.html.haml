- if gend_image.work_in_progress
  = render(partial: 'application/under_construction')
- else
  .thumb-background
    = link_to image_tag(gend_thumb_url_for(gend_image), |
      size: gend_image.gend_thumb.dimensions),          |
      controller: :gend_image_pages,                    |
      action: :show,                                    |
      id: gend_image.id_hash                            |
- if show_toolbar
  %p
    %input.selector{"data-id" => "#{gend_image.id_hash}", type: "checkbox"}/
