- if src_image.work_in_progress
  = render(partial: 'application/under_construction')
- else
  = link_to image_tag(src_thumb_url_for(src_image),                       |
              size: src_image.src_thumb.dimensions, alt: src_image.name), |
    controller: :gend_images,                                             |
    action: :new,                                                         |
    src: src_image.id_hash                                                |
- if user
  %input.selector{"data-id" => "#{src_image.id_hash}", type: "checkbox"}/
